<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<style>
.container {
  color: #FFFFFF;
}

.text-center h1, 
.text-center h2 {
  color: #FF0000; 
}

.text-center .lead {
  color: #A0A0A0; 
}

.team-bottom .card {
  background-color: #1F1F1F; 
  border: 1px solid #A0A0A0; 
  border-radius: 12px;
  transition: transform 0.3s ease-in-out;
}

.team-bottom .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 12px rgba(0, 191, 255, 0.5); 
}

.team-img {
  width: 100%;               
  height: 250px;             
  object-fit: contain;       
  margin-bottom: 15px;      
}

.team-name {
  font-size: 1.5rem;
  font-weight: bold;
  margin-top: 10px;
  color: #FF4E4E; 
}

.team-role {
  font-size: 1rem;
  color: #A0A0A0;
  margin-top: 5px;
}

.accordion-button {
  font-weight: bold;
  background-color: #1F1F1F !important; 
  color: #FFFFFF !important; 
  border: none;
}

.accordion-button::after {
  filter: invert(1); 
}

.accordion-button:not(.collapsed) {
  color: #00BFFF; 
  background-color: #121212; 
}

.accordion-body {
  background-color: #121212; 
  color: #A0A0A0; 
  border-top: 1px solid #FF4E4E; 
  padding: 1rem;
}


.accordion-item {
  background-color: #121212; 
  border: 1px solid #1F1F1F; 
  border-radius: 10px;
  overflow: hidden;
}

.accordion {
  --bs-accordion-bg: transparent;
  --bs-accordion-border-color: transparent;
}

.fw-bold {
  font-weight: 700 !important;
}

.py-5 {
  padding-top: 3rem !important;
  padding-bottom: 3rem !important;
}

.mb-3 {
  margin-bottom: 1rem !important;
}

</style>

<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold">About Our Project</h1>
    <p class="lead mt-3">
      Our platform aims to help the content creators to build more meaningful content.<br>
      Leveraging AI-Powered comment detection, quizzes and some resources to help them.
    </p>
  </div>

  <h2 class="fw-bold text-center mb-4">Meet the Team</h2>
  <div class="row team-bottom justify-content-center text-center">
    <% if(locals.members){ %>
    <% members.forEach(member => { %>
      <div class="col-12 col-md-4 mb-4">
        <div class="card p-4">
            <img src="<%= member.img %>" alt="<%= member.name %>" class="team-img">
          <div class="team-name"><%= member.name %></div>
          <div class="team-role"><%= member.role %></div>
        </div>
      </div>
    <% }) }%>
  </div>
</div>

<!-- Bootstrap FAQ Section -->
<div class="container py-5 text-white">
  <h2 class="text-center fw-bold mb-4">Frequently Asked Questions</h2>

  <div class="accordion" id="faqAccordion">

    <!-- FAQ Item -->
    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
          What is this project about?
        </button>
      </h2>
      <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          This platform helps users analyze and understand social data through interactive tools.
        </div>
      </div>
    </div>

    <!-- Repeat for other FAQs -->
    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
          Who can use this platform?
        </button>
      </h2>
      <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Anyone interested in insights, analysis, or contributing to the community.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
          How can I contact the team?
        </button>
      </h2>
      <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          You can reach us via the Contact Us page or through the email listed there.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
          Is the platform open-source?
        </button>
      </h2>
      <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Yes it is completely open source. Feel free to contribute.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
          Where can I give feedback?
        </button>
      </h2>
      <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Please use the Contact Us form and select "Feedback" from the category dropdown.
        </div>
      </div>
    </div>

  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<%- include("partials/footer.ejs") %>
