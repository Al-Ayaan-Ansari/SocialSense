<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<style>
  body {
    background-color: #121212;
    color: #ffffff;
  }

  .team-img {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 50%;
    margin: 0 auto;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
  }

  .card {
    background-color: #1f1f1f;
    border: none;
    border-radius: 15px;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.05);
  }

  .team-name {
    font-weight: 600;
    margin-top: 1rem;
    color: #FF4E4E;
  }

  .team-role {
    color: #aaa;
    font-size: 0.95rem;
  }

  @media (min-width: 768px) {
    .team-top .col-md-4 {
      display: flex;
      justify-content: center;
    }
    .team-bottom {
      justify-content: center;
    }
  }
  .accordion-body{
    color: #FF4E4E;
  }
</style>

<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold">About Our Project</h1>
    <p class="lead mt-3">
      Our project empowers people with accessible financial tools and knowledge. From investment opportunities to saving plans and educational resources, we aim to make finance simple and social. Users can explore, analyze, and connect â€” all in one platform.
    </p>
  </div>

  <h2 class="fw-bold text-center mb-4">Meet the Team</h2>
  <div class="row team-bottom text-center">
    <% if(locals.members){ %>
    <% members.forEach(member => { %>
      <div class="col-12 col-md-4 mb-4">
        <div class="card p-4">
            <img src="<%= member.img %>" alt="<%= member.name %>" class="team-img">
          <div class="team-name"><%= member.name %></div>
          <div class="team-role"><%= member.role %></div>
        </div>
      </div>
    <% }) }%>
  </div>
</div>

<!-- Bootstrap FAQ Section -->
<div class="container py-5 text-white">
  <h2 class="text-center fw-bold mb-4">Frequently Asked Questions</h2>

  <div class="accordion" id="faqAccordion">

    <!-- FAQ Item -->
    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
          What is this project about?
        </button>
      </h2>
      <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          This platform helps users analyze and understand financial or social data through interactive tools.
        </div>
      </div>
    </div>

    <!-- Repeat for other FAQs -->
    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
          Who can use this platform?
        </button>
      </h2>
      <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Anyone interested in insights, analysis, or contributing to the community.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
          How can I contact the team?
        </button>
      </h2>
      <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          You can reach us via the Contact Us page or through the email listed there.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
          Is the platform open-source?
        </button>
      </h2>
      <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Currently, it is not open-source, but we plan to release certain modules publicly.
        </div>
      </div>
    </div>

    <div class="accordion-item bg-dark border border-secondary mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
          Where can I give feedback?
        </button>
      </h2>
      <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body">
          Please use the Contact Us form and select "Feedback" from the category dropdown.
        </div>
      </div>
    </div>

  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<%- include("partials/footer.ejs") %>
