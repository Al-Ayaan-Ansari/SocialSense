<%- include("partials/navbar.ejs") %>

<style>
body {
  background-color: #121212; 
  font-family: 'Verdana', 'Geneva', 'Tahoma', sans-serif;
}

.wrapper {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-box {
  background-color: #1F1F1F; 
  padding: 40px;
  border-radius: 12px;
  box-shadow: 0 0 15px rgba(0, 191, 255, 0.2); 
}

h2 {
  color: #FF0000; 
}

.text-gray {
  color: #A0A0A0; 
}

.contact-info p {
  font-size: 1rem;
  margin-bottom: 12px;
  color: #FFFFFF;
}

.text-link {
  color: #00BFFF;
  text-decoration: none;
}

.text-link:hover {
  text-decoration: underline;
}

.contact-form {
  background-color: transparent;
}

.form-input {
  background-color: #121212;
  color: #FFFFFF;
  border: 1px solid #A0A0A0;
  border-radius: 8px;
  padding: 12px;
  font-size: 1rem;
}

.form-input::placeholder {
  color: #A0A0A0;
}

.form-input:focus {
  border-color: #00BFFF;
  outline: none;
  box-shadow: 0 0 0 2px rgba(0, 191, 255, 0.3);
}

.btn-submit {
  background-color: #FF0000; 
  color: #FFFFFF;
  border: none;
  border-radius: 8px;
  font-size: 1.2rem;
  font-weight: bold;
  transition: background-color 0.3s ease-in-out;
}

.btn-submit:hover {
  background-color: #FF4E4E; 
}

i {
  font-size: 1.2rem;
  color: #00BFFF;
}

@media (max-width: 768px) {
  .contact-box {
    padding: 20px;
  }

  .form-input {
    font-size: 0.95rem;
    padding: 10px;
  }

  .btn-submit {
    font-size: 1rem;
    padding: 10px 0;
  }
}

@media (max-width: 576px) {
  .contact-box {
    padding: 15px;
  }

  h2 {
    font-size: 1.8rem;
  }

  .contact-info p {
    font-size: 0.95rem;
  }
}

  </style>
 
  <div class="wrapper py-5">
    <div class="contact-box container px-4">
        <div class="row g-5 align-items-center">

            <!-- Contact Info -->
            <div class="col-12 col-md-6 text-white">
                <h2 class="fw-bold mb-3">Contact Us</h2>
                <p class="text-gray mb-4">Feel free to use the form below or drop us an email anytime.</p>
                <div class="contact-info">
                    <p><i class="bi bi-envelope-fill me-2"></i> <a href="mailto:mohdadnankhan.india@gmail.com" class="text-link">Click to send Mail</a></p>
                    <p><i class="bi bi-geo-alt-fill me-2"></i> FET Building, Jamia Millia Islamia, New Delhi</p>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-12 col-md-6">
                <form action="/contact" method="POST" class="contact-form">
                    <div class="row mb-3">
                        <div class="col">
                            <input type="text" class="form-control form-input" name="fName" placeholder="First Name" required>
                        </div>
                        <div class="col">
                            <input type="text" class="form-control form-input" name="lName" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control form-input" name="email" placeholder="Email Address" required>
                    </div>
                    <div class="mb-3">
                        <select class="form-select form-input" name="category" required>
                            <option value="" disabled selected>Select a Category</option>
                            <option value="feedback">Feedback</option>
                            <option value="general Issue">General Issue</option>
                            <option value="website Issue">Website Issue</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control form-input" name="message" rows="5" placeholder="Your Message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-submit w-100 py-2">Submit</button>
                </form>
            </div>

        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>