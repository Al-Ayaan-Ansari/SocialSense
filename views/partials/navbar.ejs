      100% { transform: scale(1); }
    }
    
    @keyframes glow {
        0% {
          box-shadow: 0 0 3px #ff4d4d, 0 0 6px #ff4d4d, 0 0 9px #ff4d4d;
        }
        50% {
          box-shadow: 0 0 4px #ff1a1a, 0 0 8px #ff1a1a, 0 0 12px #ff1a1a;
        }
        100% {
